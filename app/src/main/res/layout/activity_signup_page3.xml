<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
tools:context=".signup_page_3"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingTop="64dp"
android:background="@drawable/bg"
android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        >
        <ImageView
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/outline_arrow_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-28dp"

            android:text="Sign Up"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textFontWeight="400"
            android:textColor="@color/white"
            android:textAlignment="center"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/step3"/>
</LinearLayout>
<!--    main -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:paddingBottom="64dp"

        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!--            input fill-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"

                    android:text="What are 3 of your favorite games?"
                    android:textColor="@color/gray"
                    android:fontFamily="sans-serif"
                    android:textSize="16sp"
                    android:textFontWeight="400"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:hint="Search games"
                    android:textColorHint="@color/gray"
                    android:labelFor="@+id/email">
                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/text_input"

                        android:text=""
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textFontWeight="300"
                        android:textColor="@color/white"
                        android:inputType="textEmailAddress"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
<!--        card game-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"

            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="-16dp"
                    android:background="@android:color/transparent"
                    android:contentDescription=" "


                    android:scaleX="0.85"
                    android:src="@drawable/cardg_focuss"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@android:color/transparent"
                    android:contentDescription=" "


                    android:scaleX="0.85"
                    android:src="@drawable/cardg"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="-16dp"
                    android:background="@android:color/transparent"
                    android:contentDescription=" "


                    android:scaleX="0.85"
                    android:src="@drawable/cardg"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@android:color/transparent"
                    android:contentDescription=" "


                    android:scaleX="0.85"
                    android:src="@drawable/cardg"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="-16dp"
                    android:background="@android:color/transparent"
                    android:contentDescription=" "

                    android:scaleX="0.85"
                    android:src="@drawable/cardg"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@android:color/transparent"
                    android:contentDescription=" "


                    android:scaleX="0.85"
                    android:src="@drawable/cardg"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <!--            button-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="270dp"
                android:layout_height="68dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_solid"
                android:contentDescription="bg_btn_solid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="Continue"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:textFontWeight="500"
                android:textColor="@color/white"
                android:textAlignment="center"

                />
        </FrameLayout>
        <TextView
            android:id="@+id/send_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="Skip This Step"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>