<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".signup_page_2"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="64dp"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            >
            <ImageView
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/outline_arrow_back"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-28dp"

                android:text="Sign Up"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textFontWeight="400"
                android:textColor="@color/white"
                android:textAlignment="center"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/step2"/>
    </LinearLayout>
    <!--    main -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="32dp"
            android:paddingBottom="64dp"

            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!--            input fill-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="48dp"

                        android:text="A confirmation code was sent to"
                        android:textColor="@color/gray"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textFontWeight="400"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="example123@gmail.com."
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textFontWeight="600"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="64dp"

                        android:text="Check your email and enter the code below."
                        android:textColor="@color/gray"
                        android:fontFamily="sans-serif"
                        android:textSize="16sp"
                        android:textFontWeight="400"
                        android:textAlignment="center"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"

                        android:hint="Confirmation Code "
                        android:textColorHint="@color/gray"
                        android:labelFor="@+id/email">
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/text_input"

                            android:text=""
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"
                            android:textFontWeight="300"
                            android:textColor="@color/white"
                            android:inputType="textEmailAddress"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
<!--            -->

            <TextView
                android:id="@+id/send_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:fontFamily="sans-serif"
                android:text="Didnâ€™t receive a code? Send again."
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="18sp" />
            <!--            button-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_gravity="center"
                >
                <ImageButton
                    android:id="@+id/btn_signup"
                    android:layout_width="270dp"
                    android:layout_height="68dp"
                    android:contentDescription="bg_btn_solid"
                    android:background="@drawable/btn_solid"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="Continue"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:textColor="@color/white"
                    android:textAlignment="center"

                    />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>